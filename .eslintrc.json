{
    "extends": [
        "eslint:recommended",
        "plugin:@typescript-eslint/recommended",
        "prettier"
    ],
    "parser": "@typescript-eslint/parser",
    "rules": {
        "prettier/prettier": "error"
    },
    "plugins": [
        "@typescript-eslint",
        "prettier"
    ],
    "root": true,
    "env": {
        "browser": true,
        "es6": true
    },
    "ignorePatterns": [
        "node_modules/",
        "dist/",
        "lib/",
        "public/",
        "config/"
    ]
}